{
  "module": {
    "type": "es6",
    "ignoreDynamic": true
  },
  "jsc": {
    "parser": {
      "syntax": "typescript",
      "dynamicImport": true,
      "decorators": true,
      "tsx": true
    },
    "transform": {
      "legacyDecorator": true,
      "decoratorMetadata": true,
      "react": {
        "runtime": "automatic",//这个设置可以支持react的新版本，react新版本中JSX部分重写了
        "throwIfNamespace": true,
        "useBuiltins": true
      }
    },
    "target": "esnext",
    "loose": true,
    "externalHelpers": true,
    "keepClassNames": false
  }
}
